<script>
var gt= document.getElementById("time");

setInterval(function(){

gt.innerText=new Date().toLocaleTimeString();

if(gt.style.color=="green"){
gt.style.color="blue"
gt.style.textShadow = "red 1px 2px 25px";
}

else if(gt.style.color=="blue"){
gt.style.color="red";
gt.style.textShadow= "green 1px 2px 25px";
}

else if(gt.style.color=="red"){
gt.style.color="green";
gt.style.textShadow = "blue 1px 2px 25px";
}

},122)


</script>

